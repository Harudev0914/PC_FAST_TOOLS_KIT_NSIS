{
  "name": "IPC_NSIS",
  "version": "1.0.0",
  "description": "PC Optimization Tool - Computer Cleaner, Memory Optimizer, Gaming Mode and more",
  "main": "electron/main.js",
  "author": "KR_Tuki",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir"
  },
  "keywords": [
    "pc-optimizer",
    "computer-cleaner",
    "memory-optimizer",
    "gaming-mode"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "systeminformation": "^5.30.3",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
